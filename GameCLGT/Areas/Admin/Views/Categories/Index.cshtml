@model IEnumerable<CLGTgame.Areas.Admin.Models.Category>

@{
    ViewBag.Title = "Index";
}
@using PagedList.Mvc;
@using PagedList;

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-6">
            <div class="input-group">
                <input type="text" class="form-control" name="search" id="search" placeholder="Search...">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit"><div class="glyphicon glyphicon-search"></div></button>
                </span>
            </div>
        </div>
    </div>
}

<p class="btn btn-default">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category_image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.List_game_cate.ID_game)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category_name)
        </td>
        <td>
           <img src="@Html.DisplayFor(modelItem => item.Category_image)" width="30"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.List_game_cate.ID_game)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
@Html.PagedListPager((IPagedList)ViewBag.Content, page => Url.Action("Index", new { page }))
